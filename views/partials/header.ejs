    <div class="header-container">
        <div class="logo">
            <a href="/">
                <i class="fas fa-home"></i>
                <span>Airair</span> 
            </a>
        </div>
        <nav>
            <ul>
                <% if (userId) { %>
                    <li><a href="/add-listing">Créer une annonce</a></li>
