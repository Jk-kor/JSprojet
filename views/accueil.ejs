<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Accueil - Locations</title>
     <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<%- include('partials/header') %>

    <main>
        <!-- Conteneur pour la liste des logements -->
        <div class="logement-list">
            <!-- Boucle EJS pour afficher chaque logement -->
            <% logements.forEach(logement => { %>
                <div class="logement-card">
                    <img src="/images/<%= logement.photos[0] %>" alt="<%= logement.name %>">
                    <h3><%= logement.name %></h3>
                    <p><%= logement.prix %>€/nuit</p>
                    <a href="/logement/<%= logement.id %>">Voir détail</a>
                </div>
            <% }) %>
        </div>
    </main>

<%- include('partials/footer') %>
</body>
</html>